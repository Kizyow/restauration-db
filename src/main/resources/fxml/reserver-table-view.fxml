<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.perrot54u.restaurationdb.controllers.ReserverTableController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <center>
            <VBox alignment="TOP_CENTER" prefHeight="482.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="20.0" prefHeight="41.0" prefWidth="600.0">
                     <children>
                        <DatePicker id="dateDebut" fx:id="date" promptText="Date">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </DatePicker>
                        <TextField fx:id="heure" promptText="Heure (hh:mm)" />
                     </children>
                  </HBox>
                  <HBox alignment="TOP_CENTER" prefHeight="41.0" prefWidth="600.0">
                     <children>
                        <TextField fx:id="numTable" promptText="Numéro de table" />
                        <TextField fx:id="nbPersonnes" layoutX="236.0" layoutY="10.0" promptText="Nombre de personnes">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </TextField>
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
                  <Button mnemonicParsing="false" onAction="#reserverTable" text="Consulter les tables disponibles">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Button>
                  <TextArea id="resultat" fx:id="result" editable="false" prefHeight="212.0" prefWidth="600.0">
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin></TextArea>
               </children>
            </VBox>
         </center>
         <top>
            <HBox prefHeight="46.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#onBack">
                     <graphic>
                        <ImageView fitHeight="18.0" fitWidth="60.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/back.jpg" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Réserver une table" textAlignment="JUSTIFY" underline="true">
                     <font>
                        <Font name="Bangla MN" size="13.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="220.0" top="10.0" />
                     </HBox.margin>
                  </Text>
               </children>
            </HBox>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
